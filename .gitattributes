# Auto detect text files and perform LF normalization
* text=auto

# TypeScript files
*.ts text eol=lf
*.tsx text eol=lf

# JavaScript files
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.config.js text eol=lf
*.config.ts text eol=lf
*.config.json text eol=lf

# Package files
package.json text eol=lf
package-lock.json text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Shell scripts
*.sh text eol=lf

# Docker files
Dockerfile* text eol=lf
docker-compose*.yml text eol=lf

# Git files
.gitignore text eol=lf

*.env text eol=lf
*.env.* text eol=lf
.editorconfig text eol=lf
.prettierrc text eol=lf
.prettierrc.* text eol=lf
.eslintrc text eol=lf
.eslintrc.* text eol=lf

# Binary files (should not be modified)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
